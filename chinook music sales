SELECT FirstName, LastName, CustomerId, Country FROM chinook.customers WHERE Country <> "USA";
--customers not in USA

SELECT FirstName, LastName, Country FROM chinook.customers WHERE Country = "Brazil";
--Only brazilian customers

SELECT cust.FirstName, cust.LastName, inv.InvoiceId, inv.BillingCountry, inv.InvoiceDate FROM chinook.invoices AS inv
LEFT JOIN chinook.customers AS cust
ON inv.CustomerId = cust.CustomerId
WHERE inv.BillingCountry= "Brazil";
--combine 2 tables with a join (customers and invoices)
-- dont want extra data from full tables so rename sections wanna use

SELECT * FROM chinook.Employees WHERE Title = "Sales Support Agent";
--employees who are sales agents

SELECT Distinct BillingCountry FROM chinook.invoices; 


----number 6----
SELECT emp.LastName, emp.Firstname, inv.InvoiceId
FROM chinook.Employees emp 
JOIN chinook.Customers cust ON cust.SupportRepId = emp.EmployeeId
JOIN chinook.invoices Inv ON Inv.CustomerId = cust.CustomerId;
--show invoices and their sales agent
